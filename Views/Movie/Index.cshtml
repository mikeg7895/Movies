@{
    ViewData["Title"] = "Peliculas";
}
@model IEnumerable<Movie>

<div class="row">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <div class="col-md-6 d-inline">
            <form asp-action="Index" method="get">
                <div class="col-md-6 d-flex">
                    <input class="form-control" type="text" name="search" placeholder="Buscar" />
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>

        <a class="btn btn-primary" asp-controller="Movie" asp-action="Create">Crear película</a>
    </div>
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Genero</th>
                    <th>Año</th>
                    <th>Descripcion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Year</td>
                        <td>@movie.Description</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Editar</a>
                            <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay peliculas</p>
    }
</div>